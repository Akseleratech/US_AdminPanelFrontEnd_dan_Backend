{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/dashboard/**", "function": "dashboard" },
      { "source": "/api/dashboard",   "function": "dashboard" },

      { "source": "/api/services/**", "function": "services" },
      { "source": "/api/services",    "function": "services" },

      { "source": "/api/spaces/**",   "function": "spaces" },
      { "source": "/api/spaces",      "function": "spaces" },

      { "source": "/api/amenities/**", "function": "amenities" },
      { "source": "/api/amenities",    "function": "amenities" },

      { "source": "/api/cities/**",   "function": "cities" },
      { "source": "/api/cities",      "function": "cities" },

      { "source": "/api/buildings/**", "function": "buildings" },
      { "source": "/api/buildings",    "function": "buildings" },

      { "source": "/api/promos/**",   "function": "promos" },
      { "source": "/api/promos",      "function": "promos" },

      { "source": "/api/articles/**", "function": "articles" },
      { "source": "/api/articles",    "function": "articles" },

      { "source": "/api/invoices/**", "function": "invoices" },
      { "source": "/api/invoices",    "function": "invoices" },

      { "source": "/api/orders/**",   "function": "orders" },
      { "source": "/api/orders",      "function": "orders" },

      { "source": "/api/customers/**", "function": "customers" },
      { "source": "/api/customers",    "function": "customers" },

      { "source": "/api/database/**", "function": "database" },
      { "source": "/api/database",    "function": "database" },

      { "source": "/api/health", "function": "health" },

      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5555
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8888
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": 5000
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9999
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4444
    },
    "singleProjectMode": true
  }
} 